@model ShoppingCart

<form method="post">
    <input hidden asp-for="ProductId" />
    <div class="card shadow mt-4 mb-4">
        
        <div class="card-header bg-warning text-dark py-4 text-center">
            <h3 class="text-uppercase fw-bold">@Model.Product.Title</h3>
            <p class="text-dark-50 fw-semibold mb-0">by @Model.Product.Author</p>
        </div>

        
        <div class="card-body">
            <div class="mb-4">
                <div class="row mb-3">
                    <div class="col-6 col-md-2 offset-lg-1">
                        <a asp-action="Index" class="btn btn-outline-warning btn-sm text-uppercase fw-semibold w-100">
        
                        </a>
                    </div>
                </div>

                <div class="row">
                    <!-- Carousel / Product Images -->
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        @if (Model.Product.ProductImages != null && Model.Product.ProductImages.Count > 0)
                        {
                            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-indicators">
                                    @foreach (var imageWithIndex in Model.Product.ProductImages.Select((image, index) => new { Image = image, Index = index }))
                                    {
                                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@imageWithIndex.Index"
                                                class="@(imageWithIndex.Index == 0 ? "active" : "")" aria-current="true" aria-label="Slide @(imageWithIndex.Index + 1)"></button>
                                    }
                                </div>
                                <div class="carousel-inner">
                                    @foreach (var imageWithIndex in Model.Product.ProductImages.Select((image, index) => new { Image = image, Index = index }))
                                    {
                                        <div class="carousel-item @(imageWithIndex.Index == 0 ? "active" : "")">
                                            <img src="@imageWithIndex.Image.ImageUrl" class="d-block w-100" alt="...">
                                        </div>
                                    }
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                    <span class="carousel-control-next-icon"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>
                        }
                    </div>

                    <!-- Product Details -->
                    <div class="col-12 col-lg-6 offset-lg-1">
                        <div class="mb-3">
                            <span class="badge bg-secondary">@Model.Product.Category.Name</span>
                        </div>

                        <div class="mb-2"><small class="text-muted">ISBN: @Model.Product.ISBN</small></div>
                        <div class="mb-3">
                            <small class="text-muted">List Price: <span class="text-decoration-line-through">@Model.Product.ListPrice.ToString("c")</span></small>
                        </div>

                        <!-- Price Table -->
                        <div class="row text-center mb-3">
                            <div class="col-3 col-lg-2 bg-light py-1 fw-semibold">Quantity</div>
                            <div class="col-3 col-lg-2 bg-light py-1 fw-semibold">1-50</div>
                            <div class="col-3 col-lg-2 bg-light py-1 fw-semibold">51-100</div>
                            <div class="col-3 col-lg-2 bg-light py-1 fw-semibold">100+</div>
                        </div>
                        <div class="row text-center mb-3">
                            <div class="col-3 col-lg-2 bg-light text-warning fw-bold py-1">Price</div>
                            <div class="col-3 col-lg-2 bg-light text-warning fw-bold py-1">@Model.Product.Price.ToString("c")</div>
                            <div class="col-3 col-lg-2 bg-light text-warning fw-bold py-1">@Model.Product.Price50.ToString("c")</div>
                            <div class="col-3 col-lg-2 bg-light text-warning fw-bold py-1">@Model.Product.Price100.ToString("c")</div>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <p class="text-muted">@Html.Raw(Model.Product.Description)</p>
                        </div>

                        <!-- Quantity Input -->
                        <div class="mb-3 col-md-4">
                            <div class="input-group">
                                <span class="input-group-text bg-warning text-dark fw-semibold">Count</span>
                                <input asp-for="Count" type="number" value="1" class="form-control text-end" />
                            </div>
                        </div>

                        <!-- Add to Cart Button -->
                        <div class="mb-3 col-12 col-md-6">
                            <button type="submit" class="btn btn-warning w-100 fw-semibold text-uppercase">
                                Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
