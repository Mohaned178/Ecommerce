@page
@model RegisterModel


<div class="card shadow border-0 mt-4">
    <div class="card-header" style="background: linear-gradient(90deg, #FF6B00, #FF8C42);">
        <div class="row">
            <div class="col-12 text-center">
                @if (User.IsInRole(SD.Role_Admin))
                {
                    <h2 class="py-2 text-white">Register - ADMIN PORTAL</h2>
                }
                else
                {
                    <h2 class="py-2 text-white">Register</h2>
                }
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-3">
            <div class="col-md-12">
                <form id="registerForm" class="row" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h3 class="border-bottom pb-3 mb-4" style="color:#4B5563;text-align:center;">Create a new account.</h3>

                    <div class="form-floating mb-3 col-md-12">
                        <input asp-for="Input.Email" class="form-control border border-warning" autocomplete="username" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="ms-2 text-warning">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.Name" class="form-control border border-warning" placeholder="Full Name" />
                        <label asp-for="Input.Name" class="ms-2 text-warning">Full Name</label>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.PhoneNumber" class="form-control border border-warning" placeholder="Phone Number" />
                        <label asp-for="Input.PhoneNumber" class="ms-2 text-warning">Phone Number</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.Password" class="form-control border border-warning" autocomplete="new-password" placeholder="Password" />
                        <label asp-for="Input.Password" class="ms-2 text-warning">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.ConfirmPassword" class="form-control border border-warning" autocomplete="new-password" placeholder="Confirm Password" />
                        <label asp-for="Input.ConfirmPassword" class="ms-2 text-warning">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.StreetAddress" class="form-control border border-warning" placeholder="Street Address" />
                        <label asp-for="Input.StreetAddress" class="ms-2 text-warning">Street Address</label>
                        <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.City" class="form-control border border-warning" placeholder="City" />
                        <label asp-for="Input.City" class="ms-2 text-warning">City</label>
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.State" class="form-control border border-warning" placeholder="State" />
                        <label asp-for="Input.State" class="ms-2 text-warning">State</label>
                        <span asp-validation-for="Input.State" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.PostalCode" class="form-control border border-warning" placeholder="Postal Code" />
                        <label asp-for="Input.PostalCode" class="ms-2 text-warning">Postal Code</label>
                        <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                    </div>

                    @if (User.IsInRole(SD.Role_Admin))
                    {
                        <div class="form-floating mb-3 col-md-6">
                            <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select" style="border-color:#FF6B00;">
                                <option disabled selected>-Select Role-</option>
                            </select>
                        </div>
                        <div class="form-floating mb-3 col-md-6">
                            <select asp-for="Input.CompanyId" style="display:none; border-color:#FF6B00;" asp-items="@Model.Input.CompanyList" class="form-select">
                                <option disabled selected>-Select Company-</option>
                            </select>
                        </div>
                    }

                    <div class="col-12">
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-gradient text-white" style="background: linear-gradient(90deg, #FF6B00, #FF8C42);">Register</button>
                    </div>
                </form>
            </div>

            @if (!User.IsInRole(SD.Role_Admin))
            {
                <div class="col-md-12 p-3 text-center">
                    <section>
                        <p class="divider-text d-flex pt-3" style="color:#D97706;">or</p>

                        @{
                            if ((Model.ExternalLogins?.Count ?? 0) == 0)
                            {
                                <div>
                                    <p>
                                        There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                            article
                                            about setting up this ASP.NET application to support logging in via external services
                                        </a>.
                                    </p>
                                </div>
                            }
                            else
                            {
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                    <div>
                                        <p>
                                            @foreach (var provider in Model.ExternalLogins!)
                                            {
                                                <button type="submit" class="btn" style="background: #FF6B00; color:white; margin:2px;" name="provider" value="@provider.Name">@provider.DisplayName</button>
                                            }
                                        </p>
                                    </div>
                                </form>
                            }
                        }
                    </section>
                </div>
            }
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#Input_Role').change(function(){
                var selection = $('#Input_Role Option:Selected').text();
                if(selection=='Company'){
                    $('#Input_CompanyId').show();
                }
                else{
                    $('#Input_CompanyId').hide();
                }
            })
        })
    </script>
}
